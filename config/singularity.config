
process {
  executor = 'local'           // The type of system the processes are being run on (do not modify this)
  maxForks = 16                 // The maximum number of forks a single process is allowed to spawn
  container = 'passdan/amrplusplus-update:latest'

  withLabel: trimming {
     container = 'staphb/fastp:0.23.4'
  }
 
  withLabel: alignmentBowtie2 {
     container = 'nanozoo/bowtie2:2.5.0--ec11f04' 
  }
  
  withLabel: 'qiime2' { 
      container = 'enriquedoster/qiime2:latest'
  }
}

singularity {
  enabled = true
  autoMounts  = true
}
